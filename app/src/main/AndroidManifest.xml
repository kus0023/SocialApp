<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.socialapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/my_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/my_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".DashboardActivity" android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>
        <activity android:name=".FriendRequestActivity"/>
        <activity android:name=".AllFriendsActivity"/>
        <activity android:name=".UserProfilePageAcitvity"/>
        <activity android:name=".AddNewFriendActivity"/>
        <activity android:name=".EditUserInfoActivity"/>
        <activity android:name=".AddUserPostActivity" />
        <activity android:name=".UserpostActivity" />
        <activity android:name=".MyProfileActivity"/>
        <activity android:name=".LoginRegisterActivity" android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>

        <activity android:name=".MainActivity" android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>